<html xmlns="http://www.w3.org/1999/xhtml" lang="es">
  <head>
    <meta charset="utf-8"/>
    <title>Credit-tree</title>
    
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <meta content="" name="description"/>
    <meta content="" name="author"/>
    
    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!-- Le fav and touch icons -->
    <link href="images/favicon.ico" rel="shortcut icon"/>
    <link href="images/apple-touch-icon.png" rel="apple-touch-icon"/>
    <link href="images/apple-touch-icon-72x72.png" sizes="72x72" rel="apple-touch-icon"/>
    <link href="images/apple-touch-icon-114x114.png" sizes="114x114" rel="apple-touch-icon"/>
  </head>

  <body>
    
    <div class="topbar">
      <div class="topbar-inner">
        <div class="container-fluid">
          <a href="/" class="brand">Credit-tree</a>
          <ul class="nav">
            <li><a href="/about">Nosotros</a></li>
            <li><a href="/contact">Contacto</a></li>
          </ul>
          <p class="pull-right">Logged in as <a href="#">username</a></p>
        </div>
      </div>
    </div>
    
    <div class="container-fluid">
      <% unless params[:action] == 'contact' -%>
        <div class="sidebar">
          <div class="well">
            <h5>Cálculos</h5>
            <ul>
              <li><a href="#">Cálculo de cuotas</a></li>
              <li><a href="#">Préstamos</a></li>
              <li><a href="#">Link</a></li>
            </ul>
            
            <h5>Que tal si  [...]?</h5>
            <ul>
              <li><a href="#">Refinancio la deuda</a></li>
              <li><a href="#">Sube el dólar</a></li>
              <li><a href="#">Compro __ ?</a></li>
            </ul>

            <h5>Sidebar</h5>
            <ul>
              <li><a href="#">Link</a></li>
              <li><a href="#">Link</a></li>
            </ul><h5>Sidebar</h5>
          </div>
        </div>
      <% end -%>
      
      <div class="content">
        <%= yield %>
      </div>
      <footer>
        Algunos derechos reservados por Credit-tree <%= Date.today.year %>. <%= link_to 'Leer mas.', :controller => 'pages', :action => 'about' %>
        <p class="pull-right">
          <%= link_to image_tag('logo-only1.png', :title => 'Firefox', :alt => 'Firefox') , 'http://www.mozilla.org/en-US/firefox/new/' %> <%= link_to image_tag('chrome-24.png', :title => 'Chrome', :alt => 'Chrome') , 'http://www.google.co.uk/chrome?hl=es-419' %></p>
        </footer>
    </div>
  </body>
</html>
